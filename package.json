{
  "workspaces": [
    "src/frontend",
    "src/backend"
  ],
  "name": "dsc-portal",
  "version": "1.0.0",
  "description": "This project is being developed in a phased manner to ensure incremental improvements and feature additions. Below are the details of each stage:",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "npm --prefix src/frontend start",
    "start:backend": "npm --prefix src/backend start",
    "dev:backend": "npm --prefix src/backend run dev",
    "dev:frontend": "npm --prefix src/frontend run dev",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "npx prettier --write ."
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^7.6.0",
    "prettier": "^3.4.2",
    "vite": "^6.0.6"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@dicebear/adventurer": "^9.2.2",
    "@dicebear/avatars": "^4.10.8",
    "cors": "^2.8.5",
    "framer-motion": "^5.6.0",
    "input": "^1.0.1",
    "lucide-react": "^0.469.0",
    "motion": "^11.14.1",
    "otp": "^1.1.2",
    "react-icons": "^5.4.0",
    "react-simple-typewriter": "^5.0.1",
    "swiper": "^11.2.1",
    "vaul": "^1.1.2"
  }
}
